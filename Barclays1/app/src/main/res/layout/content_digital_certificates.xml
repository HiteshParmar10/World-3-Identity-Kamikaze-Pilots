<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_digital_certificates"
    tools:context="com.barclays1.DigitalCertificates">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_photo"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/ivv1"
        android:textColor="#fff"
        android:text="Upload Photo E-Certi"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="23sp"
            android:id="@+id/ivv1"
            android:layout_above="@+id/btn_idproof"
            android:background="#FFFFFF"/>
        <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_idproof"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
        android:textColor="#fff"
        android:text="Upload ID Proof E-Certi"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="23sp"
            android:id="@+id/ivv2"
            android:layout_below="@+id/btn_idproof"
            android:background="#FFFFFF"/>
        <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addressproof"
        android:background="@color/colorPrimary"
            android:layout_below="@+id/ivv2"
        android:textColor="#fff"
        android:text="Upload Address E-Certi"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_create_account"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:text="Create Account Instantly !"/>

</RelativeLayout>
